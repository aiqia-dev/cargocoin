# =============================================================================
# CargoCoin Contracts - Environment Variables
# =============================================================================

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# -----------------------------------------------------------------------------
# L1 Networks (Polygon PoS)
# -----------------------------------------------------------------------------
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_RPC_URL=https://polygon-rpc.com
AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# PolygonScan API Key for contract verification
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# -----------------------------------------------------------------------------
# L3 Networks (CargoCoin Chain)
# -----------------------------------------------------------------------------
CARGOCOIN_RPC_URL=http://localhost:8545
CARGOCOIN_TESTNET_RPC_URL=http://localhost:8545

# CargoCoin Chain Explorer (Blockscout)
CARGOCOIN_EXPLORER_API=http://localhost:4000/api
CARGOCOIN_EXPLORER_URL=http://localhost:4000

# -----------------------------------------------------------------------------
# Deployment Addresses
# -----------------------------------------------------------------------------
ADMIN_ADDRESS=
ORACLE_ADDRESS=

# L1 Contract Addresses (after deployment)
CARGOCOIN_L1_PROXY=
CARGOCOIN_L1_IMPLEMENTATION=

# L3 Contract Addresses (after deployment)
WRAPPED_CC_ADDRESS=
REWARDS_CONTRACT_ADDRESS=

# -----------------------------------------------------------------------------
# Gas Reporter (optional)
# -----------------------------------------------------------------------------
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
